{
  "hosting": {
    "public": "hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/apps/**/api/*.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      },
      {
        "source": "/assets/apps.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/apps/factor_sprint/**",
        "destination": "/apps/factor_sprint/index.html"
      },
      {
        "source": "/apps/kantan_meiro/**",
        "destination": "/apps/kantan_meiro/index.html"
      },
      {
        "source": "/apps/yj_maker/**",
        "destination": "/apps/yj_maker/index.html"
      }
    ]
  }
}
